{
    "name": "islandora/islandora-sandbox",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/auto_entitylabel": "^3.0",
        "drupal/bootstrap": "^3.19",
        "drupal/config_inspector": "^2.0",
        "drupal/content_browser": "^1.0",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/devel": "^4.1",
        "drupal/facets": "^2.0@RC",
        "drupal/libraries": "^3.0@beta",
        "drupal/matomo": "^1.13",
        "drupal/name": "^1.0@RC",
        "drupal/pdf": "^1.1",
        "drupal/rdfui": "^1.0-beta",
        "drupal/rest_oai_pmh": "^1.0",
        "drupal/restui": "^1.20",
        "drupal/search_api_solr": "^4.1",
        "drupal/uikit": "^3.15",
        "drupal/views_bulk_edit": "^2.6",
        "drupal/views_bulk_operations": "^4.0",
        "drupal/views_slideshow": "^4.8",
        "drush/drush": "^10.0.0",
        "islandora-rdm/islandora_fits": "dev-master",
        "islandora/islandora_defaults": "^2.0",
        "islandora/openseadragon": "^2.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.2",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.2",
        "library/openseadragon": "^2.4",
        "library/pdf.js": "^2.4",
	    "library/masonry": "^3.3",        
    },
    "require-dev": {
        "drupal/core-dev": "^9.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
	"discard-changes": true,
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
	"drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
        }
    }
}
